<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>Webhooks</AssemblyName>
    <RootNamespace>Webhooks</RootNamespace>
    <PackageId>Webhooks</PackageId>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Authors>Deane Barker, Paul Gruffydd</Authors>
    <Company>Kin + Carta, Optimizely</Company>
    <Product>Content Cloud Webhooks</Product>
    <Description>Adds functionality to set up and manage web hooks in Episerver sites via a UI</Description>
    <PackageProjectUrl>https://github.com/PaulGruffyddAmaze/content-cloud-webhooks</PackageProjectUrl>
    <RepositoryUrl>https://github.com/PaulGruffyddAmaze/content-cloud-webhooks</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Models\WebhookFactoryBlockInit.cs" />
    <Compile Remove="WebhooksInit.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="EPiServer.ContentDeliveryApi.Cms" Version="3.*" />
  </ItemGroup>

</Project>
